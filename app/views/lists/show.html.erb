<p>
  <strong>Name:</strong>
  <%= @list.name %>


</p>
<ul class="list-group">
        <% @movies.each do |movie| %>
            <%= movie.title %>
                <% @bookmark = Bookmark.find_by(list: @list, movie: movie) %>
            <li class="list-group-item"><%= @bookmark.comment %></li>
            <%= link_to "delete", bookmark_path(@bookmark),
                          method: :delete,
                          data: { confirm: "are you sure ?"}%>

  <% end %>
</ul>

